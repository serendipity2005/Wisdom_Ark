    "antd": "^5.26.7",
    "antd-img-crop": "^4.25.0",
    "antd-style": "^3.7.1",
    "axios": "^1.11.0",
    "katex": "^0.16.22",
    "echarts": "^6.0.0",
    "lottie-web": "^5.13.0",
    "lowlight": "^3.3.0",
    "lucide-react": "^0.525.0",
    "marked": "^16.1.1",
    "mockjs": "^1.1.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hotkeys-hook": "^5.1.0",
    "react-markdown": "^10.1.0",
