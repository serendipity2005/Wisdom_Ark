# EditorConfig is awesome: https://EditorConfig.org

root = true

# All files
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 80

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = 100

# YAML files
[*.{yml,yaml}]
indent_size = 2

# Makefile
[Makefile]
indent_style = tab

# Batch files
[*.bat]
end_of_line = crlf

# JSON files
[*.json]
indent_size = 2